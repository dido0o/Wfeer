<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c6e49"
    tools:context=".MainActivity">

    <TextView
        android:text="Welcome to Wfeer platform"
        android:textSize="35sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:text="@string/intro_text"
        android:textSize="25sp"
        android:textAlignment="center"
        android:background="@drawable/black_thick_border"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/exit_text_view"
        android:text="Exit"
        android:textSize="25sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        />

    <TextView
        android:id="@+id/next_text_view"
        android:text="Next"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="12dp"
        />

    <TextView
        android:id="@+id/full_access_test"
        android:text="Full Access"
        android:textSize="25sp"
        android:textColor="#398A8484"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>