<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green_gradient"
    tools:context=".CampInfo">

    <ImageView
        android:background="@drawable/small_green_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Wfeer"
        android:textSize="45sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        />



    <LinearLayout
        android:id="@+id/item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/black_thin_border"
        >

        <TextView
            android:id="@+id/camp_name_text_view"
            android:textSize="30dp"
            android:text="Dummy "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/camp_phone"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_thin_border"
            android:layout_margin="3dp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/camp_email"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_thin_border"
            android:layout_margin="3dp"
            android:padding="2dp"

            />

        <TextView
            android:id="@+id/food_description"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_thin_border"
            android:layout_margin="3dp"
            android:padding="2dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

    <Button
        android:id="@+id/view_food_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:text="Food Pictures"
        android:layout_margin="5dp"

        />

    <Button
        android:id="@+id/view_camp_map"
        android:text="Camp map"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Finish"
        android:layout_marginTop="120dp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25dp" />

</LinearLayout>